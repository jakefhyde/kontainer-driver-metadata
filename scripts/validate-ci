#!/bin/bash
set -e

cd $(dirname $0)/..

echo Running go mod tidy
go mod tidy

echo Running go mod verify
go mod verify

echo Running go test
go test ./pkg/...

echo Running rancher v2prov tests
./scripts/provisioning-tests

echo Running go generate
go generate

source ./scripts/version

if [ -n "$DIRTY" ]; then
    echo Git is dirty
    git status
    exit 1
fi

echo Checking if released versions are not changed
go run ./pkg/validation/validation.go release-v2.8

echo Checking the generated regsync.yaml file
regsync check --config ./regsync.yaml
